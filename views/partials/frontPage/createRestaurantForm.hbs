
<div class="form row z-depth-1 col s12">
  <label>
    <h4>Create Restaurant</h4>
  </label>
  <form class="col s12" action="/restaurants" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <input name="name" type="text">
        <label for="name">Name</label>
      </div>
    </div>
    <div class="row">
      <div class="input-field col s12">
        <input name="address" type="text">
        <label for="address">Address</label>
      </div>
    </div>
    <div class="row">
      <button class="btn btn-flat waves-effect waves-light" type="submit" name="action">Create
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>