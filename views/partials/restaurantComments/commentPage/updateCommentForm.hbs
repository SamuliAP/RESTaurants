<div class="form row col s12">
  <label>
    <h4>Update Comment</h4>
  </label>
  <form class="col s12" action="/comments/{{data._id}}" method="POST">
    <div class="row">
      <div class="input-field col s12">
        <textarea placeholder={{data.comment}} name="comment" id="textarea1" class="materialize-textarea"></textarea>
        <label for="textarea1">Comment</label>
      </div>
    </div>
    <input name="restaurant" type="hidden" value={{data.restaurant}}>
    <div class="row">
      <button class="btn btn-flat waves-effect waves-light" type="submit" name="action">Update
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>